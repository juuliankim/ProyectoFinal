{{#if showLogin}}
<div class="container">
    <form action="" method="POST" id="form-login">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Ingrese su email</label>
            <input type="text" name="username" class="form-control form-text" id="email">
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label">Ingrese su contrase√±a</label>
            <input type="password" name="password" class="form-control form-text" id="password">
        </div>
        <button class="btn btn-info mt-3">Login</button>
    </form>
</div>
{{/if}}

{{#if showBienvenida}}
<div class="container bienvenida">
    <span>
        <h3 style="float: left;" id="bienvenida">Bienvenido {{bienvenida}}</h3>
        {{!-- <span><img src="{{foto}}" alt=""></span> --}}

        <form style="float: right;" action="/users/logout" method="GET">
            <button type="submit" id="boton-logout" class="btn btn-danger">Logout</button>
        </form>
    </span>

</div>
{{/if}}
{{#if showContent}}
<div class="container">
    <button id="boton-productos" class="btn btn-info" style="background-color: black;">PRODUCTOS</button>
    <button id="boton-carrito" class="btn btn-info" style="background-color: black;">CARRITO</button>

    <div id="lista-productos" class='hidden'>
        <table class="table table-light">
            <tr>
                <th>Mongo-ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            {{#each listaProductos}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.nombre}}</td>
                <td>${{this.precio}}</td>
                <td><img width="50" src={{this.foto}} alt="not found"></td>
            </tr>
            {{/each}}
        </table>
    </div>

    <div id='vista-carrito' class='hidden'>
        <div>
            {{vistaCarrito}}
        </div>
        <form style="float: right;" action="/carrito/comprar" method="GET">        
            <button type="submit" id="boton-logout" class="btn btn-info">Realizar orden</button>
        </form>
    </div>
</div>

<div id="tabla"></div>

{{/if}}

<script type="application/javascript">
    let botonProductos = document.getElementById('boton-productos')
    let botonCarrito = document.getElementById('boton-carrito')
    let divProductos = document.getElementById('lista-productos')
    let divCarrito = document.getElementById('vista-carrito')

    botonProductos.addEventListener('click', e => {
        divProductos.classList.remove('hidden')
        divCarrito.classList.add('hidden')
    })
    botonCarrito.addEventListener('click', e => {
        divProductos.classList.add('hidden')
        divCarrito.classList.remove('hidden')
    })
</script>

